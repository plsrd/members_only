doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet")
  body
    nav
      ul 
        if !currentUser
          li 
            a(href='/signup') Sign Up
          li 
            a(href='/login') Login
          li 
            a(href='/') Home
        else 
          li  Welcome #{currentUser.firstname}!
          li 
            a(href='/') Home
          li 
            a(href='/logout') Log out

          li 
            a(href='/messages/create') New Message

          if currentUser.membership_status == 'admin'
            li
              a(href='/admin') Admin Panel

          if currentUser.membership_status == 'user'
          li
            a(href='/users/upgrade') Upgrade Membership


    block content

  script(src="https://cdn.quilljs.com/1.3.6/quill.js")
  script(src="/javascripts/quill-textarea.js")


